<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#020209"
    tools:context=".view.MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/index2_1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top|center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="@+id/linearLayout">

        <Button
            android:id="@+id/restaurants_list_button"
            android:layout_width="371dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#1A0342"
            android:gravity="center"
            android:text="@string/restaurants"
            app:icon="@android:drawable/ic_menu_directions"
            app:iconTint="#EAEAE7" />

        <Button
            android:id="@+id/customers_list_button"
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#1A0342"
            android:gravity="center"
            android:text="@string/customers"
            app:icon="@android:drawable/ic_menu_my_calendar" />

        <Button
            android:id="@+id/reserves_list_button"
            android:layout_width="283dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#1A0342"
            android:gravity="center"
            android:text="@string/reserves"
            app:icon="@android:drawable/ic_menu_call" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>